{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "declaration": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2015"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.ts",
    "./stories/**/*"
  ]
}
