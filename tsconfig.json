{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./",
    "removeComments": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2015"
  }
}
